{
  "server": {
    "app": {
      "siteTitle": "Committed Streaker"
    },
    "load": { "sampleInterval": 1000 }
  },
  "connections": [{ "port": 3060 }],
  "registrations": [
    { "plugin": "hapi-context-app" },
    { "plugin": "inert" },
    { "plugin": "vision" },
    { "plugin": "lout" },
    {
      "plugin": {
        "register": "visionary",
        "options": {
          "engines": { "ejs": "ejs" },
          "path": "views",
          "isCached": false
        }
      }
    },
    { "plugin": "./plugins/login" },
    {
      "plugin": {
        "register": "hapi-favicon",
        "options": {
          "path": "./favicon.ico"
        }
      }
    },
    {
      "plugin": {
        "register": "good",
        "options": {
          "reporters": {
            "console": [
              {
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{
                  "response": "*",
                  "log": "*"
                }]
              },
              { "module": "good-console" },
              "stdout"
            ]
          }
        }
      }
    }
  ]
}
