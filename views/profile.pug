extends layout

block content

  if user.photos && user.photos.length
    img(src=user.photos[0].value)

  dl
    dt ID
    dd= user.id
    dt Username
    dd= user.username
    dt Display name
    dd= user.displayName
    dt On Github since
    dd= user._json.created_at.split('T')[0]
    if user.emails && user.emails.length
      dt Email
      dd= user.emails[0].value

  if output
    | !{output}
    p: a(href='/profile/streaks') More
    p: a(href='/profile/as-github') As Github

  p: a(href='/logout') Logout
